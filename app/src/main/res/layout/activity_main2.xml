<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido"
            android:fontFamily="monospace"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="40sp"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="@color/teal_700"
            />
        <ImageView
            android:layout_width="60sp"
            android:layout_height="70sp"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="2sp"
            />
    </LinearLayout>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Fecha:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        />

        <TextView
            android:id="@+id/fechaP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:layout_marginTop="5sp"
            android:text="----"
            android:textColor="#F60B0B"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Cliente:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        />
        <TextView
            android:id="@+id/idClientesP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:text="----"
            android:textColor="#1B37EC"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="ID Producto:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        />
        <TextView
            android:id="@+id/idProductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:text="----"
            android:textColor="#1B37EC"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Descripcion:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        />
        <TextView
            android:id="@+id/descripcionPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:text="----"
            android:textColor="#1B37EC"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Precio:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/precioPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:text="----"
            android:textColor="#1B37EC"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Cantidad:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/cantidadPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:hint="Cantiad"
            android:textColor="#1B37EC"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Total:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/totalPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:text="0.00"
            android:textColor="#1B37EC"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Estado:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/estadoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:text="----"
            android:textColor="#1B37EC"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_margin="50sp"
            android:backgroundTint="@color/teal_700"
            android:text="Hacer Pedido"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:onClick="pedido"
            />

</LinearLayout>